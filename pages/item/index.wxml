<!--index.wxml-->
<view class="container">
    <form class="top" bindreset="clearSearch">
        <view class="searchctn">
            <image src="/img/icon_search.png"></image>
            <view class="search" bindtap="onFocus">
                <text>请输入道具中文名或编号</text>
            </view>
        </view>
    </form>
    <scroll-view scroll-y="true" scroll-top="0" bindscroll="onScroll" wx:if="itemList" class="spriteList">
        <view class="stand"></view>
        <view wx:for="{{itemList}}" class="sprite" wx:for-item="item" wx:key="unique" data-id="{{item.id}}" data-index="{{item.index}}" bindtap="tapItemDetail">
            <image class="m-avatar" src="http://img.jianxiaodai.com/item/{{item.id}}.png"></image>
            <text class="name">{{item.name}}</text>
            <view class="types">
                <text class="m-type {{type}}" wx:for="{{item.category}}" wx:key="unique" wx:for-item="type" wx:for-index="index">{{item.category[index]}}</text>
            </view>
        </view>
    </scroll-view>
    <image class="filter" wx:if="{{isFilter}}" bindtap="tapFilter" src="/img/filterover.png"></image>
    <image class="filter" wx:else bindtap="tapFilter" src="/img/filter.png"></image>
</view>